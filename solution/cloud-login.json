{
  "tests": [
    {
      "steps": [
        {
          "action": "setVariables",
          "path": "../.env"
        },
        {
          "action": "goTo",
          "url": "https://cloud.redpanda.com"
        },
        {
          "action": "find",
          "selector": "[name=username]",
          "click": true
        },
        {
          "action": "typeKeys",
          "keys": ["jake@redpanda.com", "$ENTER$"]
        },
        {
          "action": "wait"
        },
        {
          "action": "find",
          "selector": "[data-provider=Username-Password-Authentication]",
          "click": true
        },
        {
          "action": "find",
          "selector": "[type=password]",
          "click": true
        },
        {
          "action": "typeKeys",
          "keys": ["$PASSWORD", "$ENTER$"]
        },
        {
          "action": "wait",
          "duration": 20000
        },
        {
          "action":"find",
          "selector": "[data-testid='global_announcement_modal--closeButton']",
          "click": true
        },
        {
          "action": "wait",
          "duration": 10000
        },
        {
          "action": "saveScreenshot",
          "path": "login.png",
          "directory": "screenshots",
          "overwrite": true
        }
      ]
    }
  ]
}